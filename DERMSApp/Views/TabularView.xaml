							<Label Content="Last update: " FontSize="26" FontStretch="Normal" />
						</Viewbox>
					</Grid>
				</Border>
				
				<Grid Grid.Column="2">
					<Viewbox Stretch="Uniform" HorizontalAlignment="Center">
						<Label Content="{Binding TimeStamp}" FontSize="26" FontStretch="Normal"/>
